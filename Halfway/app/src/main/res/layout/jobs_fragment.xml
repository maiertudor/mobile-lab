<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jf_ll_order_by_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customized_order_by"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jf_tv_order_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="@string/order_by"
            android:textColor="@color/simpleBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/customize_spinner">


            <Spinner
                android:id="@+id/jf_s_sort_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:spinnerMode="dropdown" />
        </FrameLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/jobsListId"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>